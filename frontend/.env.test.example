# E2E Test Environment Variables
# Copy this file to .env.test and fill in your actual values

# Base URL for the application (should match your dev server)
E2E_BASE_URL=http://localhost:5173

# Test User Credentials (regular user for testing submissions)
E2E_USER_EMAIL=test@example.com
E2E_USER_PASSWORD=test_password_123

# Admin User Credentials (for testing review/approval flow)
E2E_ADMIN_EMAIL=admin@example.com
E2E_ADMIN_PASSWORD=admin_password_123

# Supabase Configuration (if needed for test data setup)
# Note: These should point to a test/staging instance, NOT production
VITE_SUPABASE_URL=https://your-test-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-test-anon-key

# Test Configuration
# Set to 'true' to run tests in headless mode
E2E_HEADLESS=false

# Set to 'true' to save screenshots and videos on failure
E2E_CAPTURE_ON_FAILURE=true
